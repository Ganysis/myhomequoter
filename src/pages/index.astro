---
import BaseLayout from '../layouts/BaseLayout.astro';
import { niches, priorityNiches } from '../lib/niches';
import QuickQuoteForm from '../components/QuickQuoteForm';
import NicheIcon from '../components/NicheIcon.astro';

const priorityNicheItems = niches.filter((n) => priorityNiches.includes(n.slug));
const stats = [
  { value: '50,000+', label: 'Homeowners Helped' },
  { value: '10,000+', label: 'Trusted Contractors' },
  { value: '4.8/5', label: 'Average Rating' },
  { value: '50', label: 'States Covered' },
];
---

<BaseLayout
  title="Get Free Home Improvement Quotes"
  description="Connect with top-rated contractors for solar, roofing, HVAC, and more. Get up to 4 free quotes in minutes. Trusted by 50,000+ homeowners."
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-primary-600 to-primary-800 text-white overflow-hidden">
    <div class="absolute inset-0 bg-[url('/images/hero-pattern.svg')] opacity-10"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-24">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight">
            Find Trusted Contractors,
            <span class="text-secondary-400">Get Free Quotes</span>
          </h1>
          <p class="mt-6 text-xl text-primary-100 max-w-xl">
            Connect with top-rated professionals for your home projects. Compare quotes from up to 4 local contractors in minutes.
          </p>
          <div class="mt-8 flex flex-wrap gap-4">
            <a
              href="/get-quotes/"
              class="inline-flex items-center px-6 py-3 bg-white text-primary-700 font-semibold rounded-lg hover:bg-gray-100 transition-colors"
            >
              Get Free Quotes
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
            <a
              href="/how-it-works/"
              class="inline-flex items-center px-6 py-3 border-2 border-white/30 text-white font-semibold rounded-lg hover:bg-white/10 transition-colors"
            >
              How It Works
            </a>
          </div>
          <div class="mt-10 flex items-center space-x-6">
            <div class="flex -space-x-2">
              <div class="w-10 h-10 rounded-full bg-primary-400 border-2 border-white flex items-center justify-center text-sm font-medium">JM</div>
              <div class="w-10 h-10 rounded-full bg-secondary-500 border-2 border-white flex items-center justify-center text-sm font-medium">SK</div>
              <div class="w-10 h-10 rounded-full bg-amber-500 border-2 border-white flex items-center justify-center text-sm font-medium">RL</div>
            </div>
            <div class="text-sm">
              <div class="flex items-center text-yellow-300">
                {[1, 2, 3, 4, 5].map(() => (
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
              <p class="text-primary-100">Trusted by 50,000+ homeowners</p>
            </div>
          </div>
        </div>

        <!-- Quick Quote Form -->
        <div class="bg-white rounded-2xl shadow-2xl p-6 lg:p-8">
          <QuickQuoteForm client:load />
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="bg-gray-50 py-12 border-y border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {stats.map((stat, i) => (
          <div class="text-center group">
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-primary-100 mb-3 group-hover:scale-110 transition-transform">
              {i === 0 && <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" /></svg>}
              {i === 1 && <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" /></svg>}
              {i === 2 && <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" /></svg>}
              {i === 3 && <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>}
            </div>
            <div class="text-3xl lg:text-4xl font-bold text-primary-600">{stat.value}</div>
            <div class="mt-1 text-gray-600">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900">
          Home Services We Cover
        </h2>
        <p class="mt-4 text-xl text-gray-600 max-w-2xl mx-auto">
          From solar installations to roofing repairs, we connect you with qualified professionals for any home project.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-6">
        {niches.map((niche) => (
          <a
            href={`/${niche.slug}/`}
            class="group bg-white border border-gray-200 rounded-xl p-6 hover:shadow-xl hover:border-primary-300 hover:-translate-y-1 transition-all duration-300"
          >
            <div
              class="w-14 h-14 rounded-xl flex items-center justify-center mb-4 transition-transform group-hover:scale-110"
              style={`background-color: ${niche.color}15;`}
            >
              <NicheIcon icon={niche.icon} class="w-7 h-7" style={`color: ${niche.color};`} />
            </div>
            <h3 class="font-semibold text-gray-900 group-hover:text-primary-600 transition-colors">
              {niche.name}
            </h3>
            <p class="mt-2 text-sm text-gray-500 line-clamp-2">
              {niche.description}
            </p>
            <div class="mt-4 flex items-center text-sm font-medium text-primary-600 opacity-0 group-hover:opacity-100 transition-opacity">
              Get Quotes
              <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900">
          How It Works
        </h2>
        <p class="mt-4 text-xl text-gray-600">
          Get connected with contractors in 3 simple steps
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 relative">
        <!-- Connection lines -->
        <div class="hidden md:block absolute top-8 left-1/4 right-1/4 h-0.5 bg-gradient-to-r from-primary-200 via-primary-300 to-primary-200"></div>

        <div class="text-center relative">
          <div class="w-20 h-20 bg-gradient-to-br from-primary-500 to-primary-600 text-white rounded-2xl flex items-center justify-center mx-auto shadow-lg shadow-primary-200">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <div class="absolute -top-2 -right-2 md:right-auto md:left-1/2 md:ml-6 w-8 h-8 bg-secondary-500 text-white rounded-full flex items-center justify-center font-bold text-sm shadow">1</div>
          <h3 class="mt-6 text-xl font-semibold text-gray-900">Tell Us Your Project</h3>
          <p class="mt-2 text-gray-600">
            Answer a few quick questions about your home improvement project and location.
          </p>
        </div>

        <div class="text-center relative">
          <div class="w-20 h-20 bg-gradient-to-br from-primary-500 to-primary-600 text-white rounded-2xl flex items-center justify-center mx-auto shadow-lg shadow-primary-200">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <div class="absolute -top-2 -right-2 md:right-auto md:left-1/2 md:ml-6 w-8 h-8 bg-secondary-500 text-white rounded-full flex items-center justify-center font-bold text-sm shadow">2</div>
          <h3 class="mt-6 text-xl font-semibold text-gray-900">Get Matched</h3>
          <p class="mt-2 text-gray-600">
            We'll instantly match you with up to 4 pre-screened contractors in your area.
          </p>
        </div>

        <div class="text-center relative">
          <div class="w-20 h-20 bg-gradient-to-br from-primary-500 to-primary-600 text-white rounded-2xl flex items-center justify-center mx-auto shadow-lg shadow-primary-200">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="absolute -top-2 -right-2 md:right-auto md:left-1/2 md:ml-6 w-8 h-8 bg-secondary-500 text-white rounded-full flex items-center justify-center font-bold text-sm shadow">3</div>
          <h3 class="mt-6 text-xl font-semibold text-gray-900">Compare & Choose</h3>
          <p class="mt-2 text-gray-600">
            Review quotes, read reviews, and choose the best contractor for your needs.
          </p>
        </div>
      </div>

      <div class="mt-12 text-center">
        <a
          href="/get-quotes/"
          class="inline-flex items-center px-8 py-4 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors"
        >
          Get Started - It's Free
        </a>
      </div>
    </div>
  </section>

  <!-- Trust Section -->
  <section class="py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl lg:text-4xl font-bold text-gray-900">
            Why Homeowners Trust Us
          </h2>
          <div class="mt-8 space-y-6">
            <div class="flex items-start space-x-4">
              <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Pre-Screened Contractors</h3>
                <p class="mt-1 text-gray-600">Every contractor is licensed, insured, and background-checked.</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">100% Free Service</h3>
                <p class="mt-1 text-gray-600">No fees, no obligations. Get quotes and compare at no cost.</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Fast Response</h3>
                <p class="mt-1 text-gray-600">Receive quotes within hours, not days. Most contractors respond same-day.</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="w-10 h-10 bg-amber-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Real Reviews</h3>
                <p class="mt-1 text-gray-600">Read verified reviews from homeowners who completed similar projects.</p>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-gray-100 rounded-2xl p-8">
          <div class="bg-white rounded-xl shadow-lg p-6">
            <div class="flex items-center space-x-1 text-yellow-400 mb-4">
              {[1, 2, 3, 4, 5].map(() => (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <p class="text-gray-700 italic">
              "Found an amazing solar installer through MyHomeQuoter. Got 4 quotes in 2 days and saved over $5,000 compared to the first company I called. Highly recommend!"
            </p>
            <div class="mt-4 flex items-center space-x-3">
              <div class="w-10 h-10 bg-primary-100 rounded-full flex items-center justify-center text-primary-600 font-semibold">
                MJ
              </div>
              <div>
                <div class="font-semibold text-gray-900">Michael J.</div>
                <div class="text-sm text-gray-500">Houston, TX</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-primary-600 py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl lg:text-4xl font-bold text-white">
        Ready to Start Your Project?
      </h2>
      <p class="mt-4 text-xl text-primary-100">
        Get free quotes from trusted contractors today. No obligations, no fees.
      </p>
      <a
        href="/get-quotes/"
        class="mt-8 inline-flex items-center px-8 py-4 bg-white text-primary-700 font-semibold rounded-lg hover:bg-gray-100 transition-colors"
      >
        Get Free Quotes Now
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>

  <!-- Schema Markup -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "MyHomeQuoter",
    "url": "https://myhomequoter.com",
    "description": "Connect homeowners with trusted contractors for home improvement projects.",
    "areaServed": {
      "@type": "Country",
      "name": "United States"
    },
    "serviceType": ["Solar Installation", "Roofing", "HVAC", "Plumbing", "Electrical", "Windows", "Siding"]
  })} />
</BaseLayout>
