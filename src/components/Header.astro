---
import { niches, priorityNiches } from '../lib/niches';

const priorityNicheItems = niches.filter((n) => priorityNiches.includes(n.slug));
const otherNiches = niches.filter((n) => !priorityNiches.includes(n.slug));
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-100">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2">
        <div class="w-8 h-8 bg-primary-600 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
        </div>
        <span class="text-xl font-bold text-gray-900">MyHomeQuoter</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <!-- Services Dropdown -->
        <div class="relative group">
          <button class="flex items-center space-x-1 text-gray-600 hover:text-gray-900 font-medium">
            <span>Services</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>

          <!-- Dropdown Menu -->
          <div class="absolute left-0 mt-2 w-64 bg-white rounded-lg shadow-lg border border-gray-100 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <div class="p-2">
              <div class="text-xs font-semibold text-gray-400 uppercase px-3 py-2">Popular</div>
              {priorityNicheItems.map((niche) => (
                <a
                  href={`/${niche.slug}/`}
                  class="flex items-center space-x-3 px-3 py-2 rounded-md hover:bg-gray-50"
                >
                  <span class="text-gray-900 font-medium">{niche.name}</span>
                </a>
              ))}
              <div class="border-t border-gray-100 my-2"></div>
              <div class="text-xs font-semibold text-gray-400 uppercase px-3 py-2">All Services</div>
              {otherNiches.map((niche) => (
                <a
                  href={`/${niche.slug}/`}
                  class="flex items-center space-x-3 px-3 py-2 rounded-md hover:bg-gray-50"
                >
                  <span class="text-gray-700">{niche.name}</span>
                </a>
              ))}
            </div>
          </div>
        </div>

        <a href="/how-it-works/" class="text-gray-600 hover:text-gray-900 font-medium">
          How It Works
        </a>

        <a href="/for-contractors/" class="text-gray-600 hover:text-gray-900 font-medium">
          For Contractors
        </a>
      </div>

      <!-- CTA Buttons -->
      <div class="hidden md:flex items-center space-x-4">
        <a
          href="/portal/"
          class="text-gray-600 hover:text-gray-900 font-medium"
        >
          Contractor Login
        </a>
        <a
          href="/get-quotes/"
          class="inline-flex items-center px-4 py-2 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors"
        >
          Get Free Quotes
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        type="button"
        class="md:hidden p-2 text-gray-600"
        id="mobile-menu-btn"
        aria-label="Open menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile Menu -->
  <div class="hidden md:hidden" id="mobile-menu">
    <div class="px-4 py-4 space-y-2 bg-white border-t border-gray-100">
      <div class="text-xs font-semibold text-gray-400 uppercase py-2">Services</div>
      {niches.map((niche) => (
        <a
          href={`/${niche.slug}/`}
          class="block px-3 py-2 text-gray-700 hover:bg-gray-50 rounded-md"
        >
          {niche.name}
        </a>
      ))}
      <div class="border-t border-gray-100 my-2"></div>
      <a href="/how-it-works/" class="block px-3 py-2 text-gray-700 hover:bg-gray-50 rounded-md">
        How It Works
      </a>
      <a href="/for-contractors/" class="block px-3 py-2 text-gray-700 hover:bg-gray-50 rounded-md">
        For Contractors
      </a>
      <div class="pt-2 space-y-2">
        <a
          href="/portal/"
          class="block w-full text-center px-4 py-2 border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50"
        >
          Contractor Login
        </a>
        <a
          href="/get-quotes/"
          class="block w-full text-center px-4 py-2 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700"
        >
          Get Free Quotes
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
